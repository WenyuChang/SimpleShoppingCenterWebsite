<struts>
	<constant name="struts.objectFactory" value="spring" />
	<package name="goodsInfo" extends="tiles-default">
		<action name="showGoods">
			<result name="success" type="tiles">showGoods</result>
		</action>
		<action name="goodsDetail" class="goodsdetail">
			<result name="success" type="tiles">goodsDetail</result>
		</action>
		<action name="createorder">
			<result name="success" type="tiles">createOrder</result>
		</action>
	</package>
</struts>